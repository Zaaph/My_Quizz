<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
    	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		  <a class="navbar-brand" href="/" >My Quizz</a>
		  <div class="collapse navbar-collapse" id="navbarSupportedContent">
		    <ul class="navbar-nav mr-auto">
		      	<li class="nav-item">
		      		{% if id > 0 %}
		        		<a class="nav-link" href="{{ path('user_show', {'id': id}) }}" style="margin-top: 10px;">Profile</a>
		      		}
		      		{% endif %}
		      	</li>
		      	{% if not session %}
		    	<li class="nav-item">
		    		<a class="nav-link" href="{{ path('register') }}" style="margin-top: 10px;">Register</a>
		    	</li>
		    	{% endif %}
		    </ul>
		    {% if not session %}
		    <ul class="navbar-nav">
			    <li class="nav-item">
			    	<p class="navbar-text text-light" style="margin-top: 10px;">Already registered?</p>
			    </li>
			    <li class="nav-item">
			    	<a href="{{ path('login') }}" class="nav-link" style="margin-top: 10px;">Log in</a>
			    </li>
			</ul>
			{% else %}
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="btn btn-outline-danger my-2 my-sm-0" href="{{ path('logout') }}" style="margin-left: 10px">Log out</a>
				</li>
			</ul>
			{% endif %}
		  </div>
		</nav>
		<div class="container">
        	{% block body %} {% endblock %}
    	</div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
