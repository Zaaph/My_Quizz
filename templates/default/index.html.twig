{% extends 'base.html.twig' %}

{% block title %}Welcome to my_quizz!{% endblock %}

{% block body %}


<div class="container text-center" style="margin-top: 30px">
	{% if welcome %}
	    <h1>My Quizz</h1>
	    {% if not session %}
	    	<p>Welcome to My Quizz! Wanna test your knowledge?</p>
	    {% else %}
	    	<p>Welcome back {{ username }} ! Good to see you again :)</p>
	    {% endif %}
	{% else %}
		<h1>Quizzes</h1>
	{% endif %}

    <table class="table table-striped table-bordered">
    	<tbody>
    		{% for key,cat in categories %}
			    <tr><td>
			    	<a href="{{ path('quizz', {
			    		'id' : key + 1,
			    		'question': 1
			    	}) }}">
			    		{{ cat }}
			    	</a>
			    </td></tr>
			{% endfor %}
    	</tbody>
	</table>
</ul>
</div>
{% endblock %}
