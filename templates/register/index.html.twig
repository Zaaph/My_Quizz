{% extends 'base.html.twig' %}

{% block title %}Register - My Quizz{% endblock %}

{% block body %}

<div class="container">
	<h1>Register to My Quizz</h1>

    {{ form_start(form) }}
    <div class="form-group">
    	<label for="form_username">Username :</label>
		{{ form_widget(form.username, {'attr': {'class': 'form-control col-sm-4'}}) }}
	</div>
	<div class="form-group">
    	<label for="form_email">Email :</label>
		{{ form_widget(form.email, {'attr': {'class': 'form-control col-sm-4'}}) }}
	</div>
	<div class="form-group">
    	<label for="form_password">Password :</label>
		{{ form_widget(form.password, {'attr': {'class': 'form-control col-sm-4'}}) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.Register, {'attr': {'class': 'btn btn-outline-success',
			"value": "Register"}}) }}
	</div>
	{{ form_row(form._token) }}
	{{ form_rest(form) }}
	{{ form_end(form) }}
	{% if error == "mail" %}
	<div class="alert alert-danger">
		<p>Wrong mail format (example@something.whatever). Please try again.</p>
	</div>
	{% endif %}
	{% if error == "taken" %}
	<div class="alert alert-danger">
		<p>This mail is already taken.</p>
	</div>
	{% endif %}
</div>
{% endblock %}
