{% extends 'base.html.twig' %}

{% block title %}Quizz {{ quizzname }} - MyQuizz{% endblock %}

{% block body %}
	<div class="container" style="margin-top: 30px">
		<h2>Quizz {{ quizzname }}</h2>
		<h4 style="margin-top: 15px; border-bottom: solid grey 1px;">Question nÂ° {{ question_number }}</h4>
		<h6>{{ question_text }}</h6>
		<div class="row">
			{% for key,ans in answers %}
				<div class="radio col-sm-3">
					 <a href="{{ path('quizz', {
					 	'id': cat_id,
					 	'question': question_number + 1,
					 	'r': ans.expected
					}) }}">
					 	{{ ans.reponse }}
					 </a>
				</div>
			{% endfor %}
		</div>

	</div>
{% endblock %}