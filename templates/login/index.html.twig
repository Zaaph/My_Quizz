{% extends 'base.html.twig' %}

{% block title %}Login - My Quizz{% endblock %}

{% block body %}

<div class="container">
    <h1>Log In</h1>

    {{ form_start(form) }}
	<div class="form-group">
    	<label for="form_email">Email :</label>
		{{ form_widget(form.email, {'attr': {'class': 'form-control col-sm-4'}}) }}
	</div>
	<div class="form-group">
    	<label for="form_password">Password :</label>
		{{ form_widget(form.password, {'attr': {'class': 'form-control col-sm-4'}}) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.Login, {'attr': {'class': 'btn btn-outline-success',
			"value": "Login"}}) }}
	</div>
	{{ form_row(form._token) }}
	{{ form_rest(form) }}
	{{ form_end(form) }}
	{% if error == true %}
	<div class="alert alert-danger">
		<p>This mail and this password do not match.</p>
	</div>
	{% endif %}
</div>
</div>
{% endblock %}
